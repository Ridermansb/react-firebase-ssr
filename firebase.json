{
    "hosting": {
        "public": "public/",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "index.html",
            "**/*.map"
        ],
        "cleanUrls": true,
        "trailingSlash": false,
        "rewrites": [
            {
                "source": "**",
                "function": "ssr"
            }
        ]
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "hosting": {
            "port": 5000
        },
        "ui": {
            "enabled": true,
            "port": 4000
        }
    }
}
