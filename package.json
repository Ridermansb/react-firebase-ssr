        "webpack-node-externals": "^3.0.0",
        "webpack-pwa-manifest": "^4.2.0"
    },
    "engines": {
        "node": "12"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
        }
    }
}
